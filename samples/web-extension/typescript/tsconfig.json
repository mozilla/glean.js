{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
